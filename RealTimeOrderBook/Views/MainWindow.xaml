<Window x:Class="RealTimeOrderBook.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RealTimeOrderBook.ViewModels"
        Title="Real-Time Order Book - Trading Simulator" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#2E3440" 
                Padding="15" 
                CornerRadius="5"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Real-Time Order Book Simulator" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Professional Trading Dashboard" 
                           FontSize="14" 
                           Foreground="#88C0D0"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Market Data Display -->
        <Border Grid.Row="1" 
                Background="#3B4252" 
                Padding="20" 
                CornerRadius="5"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Symbol -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Symbol" 
                               FontSize="12" 
                               Foreground="#D8DEE9"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Symbol}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#ECEFF4"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Best Bid -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Best Bid" 
                               FontSize="12" 
                               Foreground="#D8DEE9"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding BestBid, StringFormat='{}{0:C2}'}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#A3BE8C"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Best Ask -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Best Ask" 
                               FontSize="12" 
                               Foreground="#D8DEE9"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding BestAsk, StringFormat='{}{0:C2}'}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#BF616A"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Spread -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Spread" 
                               FontSize="12" 
                               Foreground="#D8DEE9"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Spread, StringFormat='{}{0:C2}'}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#EBCB8B"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Volume -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="Volume" 
                               FontSize="12" 
                               Foreground="#D8DEE9"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Volume, StringFormat='{}{0:N0}'}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#88C0D0"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Recent Trades Label -->
        <TextBlock Grid.Row="2" 
                   Text="Recent Trades (Last 20)" 
                   FontSize="16" 
                   FontWeight="SemiBold"
                   Foreground="#2E3440"
                   Margin="0,0,0,10"/>

        <!-- Recent Trades DataGrid -->
        <Border Grid.Row="3" 
                BorderBrush="#D8DEE9" 
                BorderThickness="1"
                CornerRadius="5">
            <DataGrid ItemsSource="{Binding RecentTrades}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      AlternationCount="2"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      SelectionMode="Single"
                      Background="White">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Timestamp" 
                                        Binding="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}" 
                                        Width="120"/>
                    <DataGridTextColumn Header="Symbol" 
                                        Binding="{Binding Symbol}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Side" 
                                        Binding="{Binding Side}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Price" 
                                        Binding="{Binding Price, StringFormat='{}{0:C2}'}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Quantity" 
                                        Binding="{Binding Quantity, StringFormat='{}{0:N0}'}" 
                                        Width="*"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Side}" Value="Buy">
                                <Setter Property="Foreground" Value="#A3BE8C"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Side}" Value="Sell">
                                <Setter Property="Foreground" Value="#BF616A"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="4" 
                Background="#ECEFF4" 
                Padding="15" 
                CornerRadius="5"
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="Start Simulation" 
                        Command="{Binding StartCommand}"
                        Width="150" 
                        Height="35"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#A3BE8C"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,15,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button Content="Stop Simulation" 
                        Command="{Binding StopCommand}"
                        Width="150" 
                        Height="35"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#BF616A"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="15,0,0,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <TextBlock Text="{Binding StatusText}" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#2E3440"
                           VerticalAlignment="Center"
                           Margin="25,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
